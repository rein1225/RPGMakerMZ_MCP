{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./",
    "rootDir": "./",
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "allowJs": false,
    "lib": ["ES2022", "DOM"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "handlers/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

